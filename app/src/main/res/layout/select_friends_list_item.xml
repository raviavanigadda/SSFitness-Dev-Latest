<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/ic_account"
        android:id="@+id/sf_user_item_icon"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sf_user_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sf_user_item_icon"
        app:layout_constraintStart_toEndOf="@id/sf_user_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/sf_user_item_icon"
        app:layout_constraintEnd_toStartOf="@id/sf_user_item_checkbox"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="Use Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_16ssp"/>

    <CheckBox
        android:id="@+id/sf_user_item_checkbox"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sf_user_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/sf_user_item_icon"
        android:layout_marginEnd="@dimen/_8sdp"
        android:clickable="false"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@id/sf_user_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sf_user_item_icon"
        android:layout_marginTop="@dimen/_8sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>